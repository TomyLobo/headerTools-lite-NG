{
	"manifest_version": 2,
	"name": "HeaderTools Lite NG",
	"description": "Allows to modify the header and the source of messages",
	"version": "3.1",
	"author": "opto (Klaus Buecher)",
	"developer": {
		"name": "opto (Klaus Buecher), Dillinger, Paolo Kaosmos"
	},
 
	"applications": {
		"gecko": {
			"id": "hdrtoolslite@opto.one",
			"strict_min_version": "78.0"
		}
	},
	"background": {
		"scripts": ["he-background.js"]
	  },
	  "experiment_apis": {
		"WindowListener": {
		  "schema": "chrome/content/api/WindowListener/schema.json",
		  "parent": {
			"scopes": ["addon_parent"],
			"paths": [["WindowListener"]],
			"script": "chrome/content/api/WindowListener/implementation.js"
		  }
		}
		  },

		  "icons" : { 
			"32": "content/hdrtools32.png"
		  }
		

}
                                                                                                                                                        
